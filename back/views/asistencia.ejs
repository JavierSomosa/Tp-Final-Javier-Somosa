<!doctype html>
<html lang="es">

<head>
  <meta charset="utf-8" />
  <title>Encuestas - Panel Admin</title>
  <link rel="stylesheet" href="/css/estilos.css">
</head>

<body>

  <header class="topbar">
    <div class="logo">BiblioLiebre - Admin</div>

    <nav>
      <a class="activo" href="/admin/asistencia">Encuestas</a>
      <a href="/admin">Inicio Admin</a>
    </nav>
  </header>

  <div class="autores" style="text-align:center; padding:10px; font-size:12px; color:var(--text-soft);">
    Sassone - Somosa - Juarez
  </div>

  <main style="padding:20px; max-width:1000px; margin:auto;">
    <h1 style="margin-bottom:20px;">Encuestas recibidas</h1>

    <!-- FILTRO POR FECHAS -->
    <form method="GET" action="/admin/asistencia" style="margin-bottom:20px; display:flex; gap:14px;">
      <div>
        <label>Desde:</label>
        <input type="date" name="desde" value="<%= desde || '' %>">
      </div>

      <div>
        <label>Hasta:</label>
        <input type="date" name="hasta" value="<%= hasta || '' %>">
      </div>

      <button type="submit">Filtrar</button>
      <a href="/admin/asistencia" style="padding:6px 12px;">Limpiar</a>
    </form>

    <table border="1" cellpadding="8" cellspacing="0" style="border-collapse:collapse; width:100%;">
      <thead style="background:#ddd;">
        <tr>
          <th>Email</th>
          <th>Puntuación</th>
          <th>Recomienda</th>
          <th>Comentario</th>
          <th>Imagen</th>
          <th>Fecha</th>
        </tr>
      </thead>

      <tbody>
        <% if (!encuestas || encuestas.length === 0) { %>
          <tr>
            <td colspan="6" style="text-align:center; padding:20px;">
              No hay encuestas registradas.
            </td>
          </tr>
        <% } else { %>
          <% encuestas.forEach(e => { %>
            <tr>
              <td><%= e.email || "—" %></td>
              <td><%= e.puntuacion %></td>
              <td><%= e.recomendar ? "Sí" : "No" %></td>
              <td><%= e.comentario || "—" %></td>
              <td>
                <% if (e.imagen) { %>
                  <img src="<%= e.imagen %>" style="height:60px; border-radius:6px;">
                <% } else { %>
                  —
                <% } %>
              </td>
              <td><%= e.createdAt.toLocaleString("es-AR") %></td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </main>

</body>
</html>